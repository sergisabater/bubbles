  <script>
    let timeoutId;

    function activateCustomCursor() {
      document.body.classList.add('custom-cursor');
      clearTimeout(timeoutId);
      // Si no hay movimiento en 2 segundos, quita cursor personalizado
      timeoutId = setTimeout(() => {
        document.body.classList.remove('custom-cursor');
      }, 2000);
    }

    // Detecta movimiento del rat√≥n y activa el cursor personalizado
    window.addEventListener('mousemove', activateCustomCursor);
  </script>
